{
  "name": "fintech-monolith",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Production-grade modular monolith fintech backend",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter backend dev",
    "build": "pnpm --filter backend build",
    "start": "pnpm --filter backend start",
    "db:generate": "pnpm --filter backend db:generate",
    "db:migrate:create": "pnpm --filter backend db:migrate:create",
    "db:migrate:deploy": "pnpm --filter backend db:migrate:deploy",
    "db:push": "pnpm --filter backend db:push",
    "test": "pnpm --filter backend test",
    "test:unit": "pnpm --filter backend test:unit",
    "test:watch": "pnpm --filter backend test:watch",
    "test:coverage": "pnpm --filter backend test:coverage",
    "test:ui": "pnpm --filter backend test:ui",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "check": "pnpm format && pnpm lint && pnpm typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.47.0"
  }
}
