// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// ACCOUNT MODULE
// ============================================================================

model Account {
  id            String   @id @default(uuid()) @db.Uuid
  userId        String   @unique @db.Uuid
  accountNumber String   @unique @db.VarChar(20)
  balance       Decimal  @default(0) @db.Decimal(15, 2)
  currency      String   @default("USD") @db.VarChar(3)
  kycStatus     String   @default("pending") @db.VarChar(20) // pending, verified, rejected
  createdAt     DateTime @default(now()) @db.Timestamptz
  updatedAt     DateTime @updatedAt @db.Timestamptz

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
  @@index([userId])
  @@index([accountNumber])
}

// ============================================================================
// PAYMENT MODULE
// ============================================================================

model Transaction {
  id              String   @id @default(uuid()) @db.Uuid
  fromAccountId   String?  @db.Uuid
  toAccountId     String?  @db.Uuid
  amount          Decimal  @db.Decimal(15, 2)
  currency        String   @db.VarChar(3)
  type            String   @db.VarChar(20) // debit, credit, transfer
  status          String   @db.VarChar(20) // pending, completed, failed
  description     String?  @db.Text
  referenceNumber String   @unique @db.VarChar(50)
  createdAt       DateTime @default(now()) @db.Timestamptz
  updatedAt       DateTime @updatedAt @db.Timestamptz

  @@map("transactions")
  @@index([fromAccountId])
  @@index([toAccountId])
  @@index([referenceNumber])
  @@index([status])
}

// ============================================================================
// USER (shared across modules)
// ============================================================================

model User {
  id             String   @id @default(uuid()) @db.Uuid
  email          String   @unique @db.VarChar(255)
  name           String   @db.VarChar(255)
  hashedPassword String   @db.Text
  refreshToken   String?  @db.Text
  createdAt      DateTime @default(now()) @db.Timestamptz
  updatedAt      DateTime @updatedAt @db.Timestamptz

  account Account?

  @@map("users")
  @@index([email])
}
