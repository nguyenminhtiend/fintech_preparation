{
  "openapi": "3.0.0",
  "info": {
    "title": "Fintech API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development"
    }
  ],
  "components": {
    "schemas": {
      "TransferResponse": {
        "type": "object",
        "properties": {
          "transactionId": {
            "type": "string",
            "format": "uuid"
          },
          "referenceNumber": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "amount": {
            "type": "string"
          },
          "currency": {
            "type": "string"
          },
          "fromAccountId": {
            "type": "string",
            "format": "uuid"
          },
          "toAccountId": {
            "type": "string",
            "format": "uuid"
          },
          "createdAt": {
            "type": "string"
          },
          "completedAt": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "transactionId",
          "referenceNumber",
          "status",
          "amount",
          "currency",
          "fromAccountId",
          "toAccountId",
          "createdAt",
          "completedAt"
        ]
      },
      "HistoryResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "referenceNumber": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "amount": {
                  "type": "string"
                },
                "currency": {
                  "type": "string"
                },
                "balanceAfter": {
                  "type": "string"
                },
                "description": {
                  "type": "string",
                  "nullable": true
                },
                "createdAt": {
                  "type": "string"
                },
                "counterparty": {
                  "type": "object",
                  "nullable": true,
                  "properties": {
                    "accountNumber": {
                      "type": "string",
                      "nullable": true
                    },
                    "accountId": {
                      "type": "string",
                      "nullable": true
                    }
                  },
                  "required": [
                    "accountNumber",
                    "accountId"
                  ]
                }
              },
              "required": [
                "id",
                "referenceNumber",
                "type",
                "amount",
                "currency",
                "balanceAfter",
                "description",
                "createdAt",
                "counterparty"
              ]
            }
          },
          "pagination": {
            "type": "object",
            "properties": {
              "nextCursor": {
                "type": "string",
                "nullable": true
              },
              "hasMore": {
                "type": "boolean"
              }
            },
            "required": [
              "nextCursor",
              "hasMore"
            ]
          },
          "summary": {
            "type": "object",
            "properties": {
              "currentBalance": {
                "type": "string"
              },
              "availableBalance": {
                "type": "string"
              },
              "pendingTransactions": {
                "type": "integer"
              },
              "totalHolds": {
                "type": "string"
              }
            },
            "required": [
              "currentBalance",
              "availableBalance",
              "pendingTransactions",
              "totalHolds"
            ]
          }
        },
        "required": [
          "data",
          "pagination",
          "summary"
        ]
      },
      "AccountsResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "customerId": {
            "type": "string",
            "nullable": true,
            "format": "uuid"
          },
          "accountNumber": {
            "type": "string"
          },
          "balance": {
            "type": "number"
          },
          "availableBalance": {
            "type": "number"
          },
          "currency": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date"
          },
          "updatedAt": {
            "type": "string",
            "format": "date"
          }
        },
        "required": [
          "id",
          "customerId",
          "accountNumber",
          "balance",
          "availableBalance",
          "currency",
          "createdAt",
          "updatedAt"
        ]
      },
      "BalanceResponse": {
        "type": "object",
        "properties": {
          "balance": {
            "type": "number"
          },
          "availableBalance": {
            "type": "number"
          },
          "currency": {
            "type": "string"
          }
        },
        "required": [
          "balance",
          "availableBalance",
          "currency"
        ]
      }
    },
    "parameters": {}
  },
  "paths": {
    "/transactions/transfer": {
      "post": {
        "tags": [
          "Transactions"
        ],
        "summary": "Transfer funds between accounts",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fromAccountId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "toAccountId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "amount": {
                    "type": "string",
                    "pattern": "^\\d+$"
                  },
                  "currency": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 3,
                    "pattern": "^[A-Z]{3}$"
                  },
                  "idempotencyKey": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "description": {
                    "type": "string",
                    "maxLength": 500
                  }
                },
                "required": [
                  "fromAccountId",
                  "toAccountId",
                  "amount",
                  "currency",
                  "idempotencyKey"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transfer completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransferResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "409": {
            "description": "Conflict - insufficient funds or duplicate request"
          }
        }
      }
    },
    "/transactions/history": {
      "get": {
        "tags": [
          "Transactions"
        ],
        "summary": "Get transaction history for an account",
        "responses": {
          "200": {
            "description": "Transaction history retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HistoryResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "404": {
            "description": "Account not found"
          }
        }
      }
    },
    "/accounts": {
      "post": {
        "tags": [
          "Accounts"
        ],
        "summary": "Create a new account",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customerId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "currency": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 3
                  }
                },
                "required": [
                  "customerId",
                  "currency"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Account created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/accounts/{id}/balance": {
      "get": {
        "tags": [
          "Accounts"
        ],
        "summary": "Get account balance",
        "responses": {
          "200": {
            "description": "Account balance retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BalanceResponse"
                }
              }
            }
          },
          "404": {
            "description": "Account not found"
          }
        }
      }
    }
  }
}